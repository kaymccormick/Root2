<Window x:Name="win" x:Class="CodeView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeView"
        xmlns:anal="http://kaymccormick.com/xaml/analysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <anal:FormattedTextControl SourceText="{Binding ElementName=win,Path=SourceText}"/>
  </Grid>
</Window>
