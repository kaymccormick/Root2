<wpf:BaseApp
  x:Class="ProjInterface.ProjInterfaceApp"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpf="clr-namespace:KayMcCormick.Lib.Wpf;assembly=KayMcCormick.Lib.Wpf"
  xmlns:projLib="clr-namespace:ProjLib;assembly=ProjLib"
  xmlns:anal="http://kaymccormick.com/xaml/analysis"
  xmlns:interfaces="clr-namespace:ProjLib.Interfaces;assembly=ProjLib">
  <wpf:BaseApp.Resources>
    <Style TargetType="Menu">
      <Setter Property="FontFamily" Value="Leelawadee"/>
      <Setter Property="FontSize" Value="24.0"/>
    </Style>
    <anal:StatusBarItemContentTemplateSelector x:Key="StatusBarItemContentTemplateSelector" />
    <Style TargetType="StatusBarItem">
    <Setter Property="ContentTemplateSelector" Value="{StaticResource StatusBarItemContentTemplateSelector}"></Setter>
    </Style>

    <DataTemplate x:Key="{x:Type interfaces:IDetailedOperation}"
    DataType="interfaces:IDetailedOperation">
    <TextBlock Text="{Binding DisplayName}"></TextBlock>
    </DataTemplate>
  </wpf:BaseApp.Resources>
</wpf:BaseApp>