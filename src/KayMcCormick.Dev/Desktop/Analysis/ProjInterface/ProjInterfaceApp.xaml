<Application
  x:Class="ProjInterface.ProjInterfaceApp"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:projLib="clr-namespace:ProjLib;assembly=ProjLib"
  xmlns:system="clr-namespace:System;assembly=mscorlib">
  <Application.Resources>
    <Style TargetType="Menu">
      <Setter Property="FontFamily" Value="Leelawadee"/>
      <Setter Property="FontSize" Value="24.0"/>
    </Style>
    <projLib:StatusBarItemContentTemplateSelector x:Key="StatusBarItemContentTemplateSelector" />
    <Style TargetType="StatusBarItem">
    <Setter Property="ContentTemplateSelector" Value="{StaticResource StatusBarItemContentTemplateSelector}"></Setter>
    </Style>

    <DataTemplate x:Key="{x:Type projLib:IDetailedOperation}"
                   DataType="projLib:IDetailedOperation">
      <TextBlock Text="{Binding DisplayName}"></TextBlock>
    </DataTemplate>
  </Application.Resources>
</Application>