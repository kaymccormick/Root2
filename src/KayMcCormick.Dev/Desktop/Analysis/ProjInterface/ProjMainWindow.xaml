<Window
  x:Class="ProjInterface.ProjMainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ProjInterface"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:projLib="clr-namespace:ProjLib;assembly=ProjLib"
  Name="mainWindow"
  Title="MainWindow"
  Width="800"
  Height="450"
  FontSize="24.0"
  DataContext="{Binding ElementName=mainWindow, Path=ViewModel}"
  mc:Ignorable="d">
  <Window.Resources>
    <local:MruBackground x:Key="MruBackground"/>
    <CollectionViewSource x:Key="VsSource"
                          Source="{Binding Path=VsCollection}" />
    <CollectionViewSource x:Key="MruItems"
                          Source="{Binding ElementName=vs,Path=SelectedItem.MruItems}" />
    <CollectionViewSource  x:Key="SolutionInfo"
                          Source="{Binding ElementName=mru,Path=SelectedItem.ProjectCollection}" />
    <DataTemplate x:Key="VsCell"
                  DataType="projLib:IVsInstance">
      <TextBlock><Run Text="{Binding DisplayName}"/> <Run Text="{Binding Product}"/> (<Run Text="{Binding InstallationVersion}"/>)</TextBlock>
    </DataTemplate>
    <DataTemplate x:Key="MruNameTemplate" DataType="projLib:IMruItem"
                  >
      <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="{Binding Name}"></TextBlock></DockPanel>
    </DataTemplate>
    <DataTemplate
      x:Key="MruLocationTemplate" DataType="projLib:IMruItem">
      <TextBlock Text="{Binding Location}"></TextBlock>
    </DataTemplate>
  </Window.Resources>
  
  <Window.CommandBindings>
    <CommandBinding Command="local:ProjCommands.LoadSolution" Executed="CommandBinding_OnExecuted"></CommandBinding>
  </Window.CommandBindings>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Menu>
      <MenuItem Header="File">
      <MenuItem Header="Open" Command="ApplicationCommands.Open"/>
<MenuItem Header="Exit"/>
      </MenuItem>
    </Menu>
    <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2">
      <Button Click="ButtonBase_OnClick" Content="Refresh" />
      <TextBlock Margin="10" Text="{Binding CurrentProgress.FileName}"></TextBlock>
      <TextBlock Margin="10" Text="{Binding CurrentProgress.Operation}"></TextBlock>
      <TextBlock Margin="10" Text="{Binding CurrentProgress.ElapsedTime}"></TextBlock>
      <TextBlock Text="{Binding Processing}"/>
    </StackPanel>
    <ListView Grid.Column="0" Name="vs" Grid.Row="1"
              ItemsSource="{Binding Source={StaticResource VsSource}}">
      <ListView.View>
        <GridView>
          <GridViewColumn CellTemplate="{StaticResource VsCell}"/>
        </GridView>
      </ListView.View>
    </ListView>
    <ListView Name="mru" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1"
              ItemsSource="{Binding Source={StaticResource MruItems}}" SelectionChanged="Mru_OnSelectionChanged">
      <ListView.InputBindings>
        <KeyBinding Gesture="Enter" Command="local:ProjCommands.LoadSolution"></KeyBinding>
      </ListView.InputBindings>
      <ListView.Resources>
        <Style TargetType="{x:Type ListViewItem}">
          <Setter Property="Background" Value="{Binding Converter={StaticResource MruBackground}}"></Setter>
        </Style>
      </ListView.Resources>
      <ListView.View>
        <GridView>
          <GridViewColumn CellTemplate="{StaticResource MruLocationTemplate}"/>
            <GridViewColumn CellTemplate="{StaticResource MruNameTemplate}"></GridViewColumn>
        </GridView>
      </ListView.View>
    </ListView>
    <ListView Grid.Row="1" Grid.Column="2" ItemsSource="{Binding Source={StaticResource SolutionInfo}}">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"></GridViewColumn>
        </GridView>
      </ListView.View>
    </ListView>
      <projLib:MainStatusBar Grid.Row="3" Grid.ColumnSpan="3"></projLib:MainStatusBar>
    <!-- <GridViewColumn CellTemplate="{StaticResource VsCell}" Header="VS Instance" /> -->
  </Grid>
</Window>
