<Window
  x:Class="ProjInterface.ProjMainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ProjInterface"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:projLib="clr-namespace:ProjLib;assembly=ProjLib"
  Name="mainWindow"
  AllowDrop="True"
  Drop="ProjMainWindow_OnDrop"
  Title="MainWindow"
  Width="800"
  Height="450"
  FontSize="24.0"
  DataContext="{Binding ElementName=mainWindow, Path=ViewModel}"
  mc:Ignorable="d">
  <Window.Resources>
    <local:MruBackground x:Key="MruBackground" />
    <CollectionViewSource x:Key="VsSource"
                          Source="{Binding Path=VsCollection}" />
    <CollectionViewSource x:Key="MruItems"
                          Source="{Binding ElementName=vs,Path=SelectedItem.MruItems}" />
    <CollectionViewSource x:Key="SolutionInfo"
                          Source="{Binding ElementName=mru,Path=SelectedItem.ProjectCollection}" />
    <DataTemplate x:Key="VsCell"
                  DataType="projLib:IVsInstance">
      <TextBlock>
        <Run Text="{Binding DisplayName}" />
        <Run Text="{Binding Product}" /> (
        <Run Text="{Binding InstallationVersion}" />)
      </TextBlock>
    </DataTemplate>
    <DataTemplate x:Key="MruNameTemplate"
                  DataType="projLib:IMruItem">
      <DockPanel VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch">
        <TextBlock Text="{Binding Name}" />
      </DockPanel>
    </DataTemplate>
    <DataTemplate
      x:Key="MruLocationTemplate"
      DataType="projLib:IMruItem">
      <TextBlock Text="{Binding Location}" />
    </DataTemplate>
  </Window.Resources>

  <Window.CommandBindings>
    <CommandBinding
      Command="local:ProjCommands.LoadSolution"
      Executed="PerformAnalysis" />
    <CommandBinding Command="local:ProjCommands.NewAdHocWorkspace" Executed="CommandBinding_OnExecuted2"/>
  </Window.CommandBindings>
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Menu Grid.ColumnSpan="3">
      <MenuItem Header="File">
        <MenuItem Header="Open"
                  Command="ApplicationCommands.Open" />
        <MenuItem Header="Exit" />
      </MenuItem>
      <MenuItem Header="Edit">
      </MenuItem>
      <MenuItem Header="_Workspace" Visibility="{Binding ElementName=AdvancedOption,Path=IsChecked}">
        <MenuItem Header="_Create Ad-hoc Workspace" Command="local:ProjCommands.NewAdHocWorkspace"></MenuItem>
      </MenuItem>
      <MenuItem Header="_View">
        <MenuItem Name="AdvancedOption" IsChecked="True" IsCheckable="True"  Header="Advanced"
                  />
        <MenuItem Header="Exit" />
      </MenuItem>

    </Menu>
    <StackPanel Grid.Row="1" Orientation="Horizontal"
                Grid.ColumnSpan="2">
      <Button Click="ButtonBase_OnClick" Content="Refresh" />
      <TextBlock Margin="10"
                 Text="{Binding CurrentProgress.FileName}" />
      <TextBlock Margin="10"
                 Text="{Binding CurrentProgress.Operation}" />
      <TextBlock Margin="10"
                 Text="{Binding CurrentProgress.ElapsedTime}" />
      <TextBlock Text="{Binding Processing}" />
    </StackPanel>
    <ListView Grid.Column="0" Name="vs" Grid.Row="2"
              Visibility="{Binding Path=BrowserVisibility}"
              ItemsSource="{Binding Source={StaticResource VsSource}}">
      <ListView.View>
        <GridView>
          <GridViewColumn
            CellTemplate="{StaticResource VsCell}" />
        </GridView>
      </ListView.View>
    </ListView>
    <ListView Visibility="{Binding Path=BrowserVisibility}" Name="mru" Grid.Row="2" Grid.Column="1"
              
              ItemsSource="{Binding Source={StaticResource MruItems}}"
              SelectionChanged="Mru_OnSelectionChanged">
      <ListView.InputBindings>
        <KeyBinding Gesture="Enter"
                    Command="local:ProjCommands.LoadSolution" />
      </ListView.InputBindings>
      <ListView.Resources>
        <Style TargetType="{x:Type ListViewItem}">
          <Setter Property="Background"
                  Value="{Binding Converter={StaticResource MruBackground}}" />
        </Style>
      </ListView.Resources>
      <ListView.View>
        <GridView>
          <GridViewColumn
            CellTemplate="{StaticResource MruLocationTemplate}" />
          <GridViewColumn
            CellTemplate="{StaticResource MruNameTemplate}" />
        </GridView>
      </ListView.View>
    </ListView>
    <ListView Visibility="{Binding Path=BrowserVisibility}" Grid.Row="2" Grid.Column="2"
              ItemsSource="{Binding Source={StaticResource SolutionInfo}}">
      <ListView.View>
        <GridView>
          <GridViewColumn
            DisplayMemberBinding="{Binding Path=Name}" />
        </GridView>
      </ListView.View>
    </ListView>
    <TabControl Background="White" Name="results" Visibility="Hidden" Grid.ColumnSpan="3" Grid.Row="2">
      <TabItem Header="Pipeline" DataContext="{Binding Path=PipelineViewModel}">
        <StackPanel Orientation="Vertical">
          <StackPanel Orientation="Horizontal" DataContext="{Binding ElementName=mainWindow}">
            <CheckBox IsChecked="{Binding Mode= OneWay,Path=WorkspaceActionBlock.Completion.IsCompleted}"></CheckBox>
          </StackPanel>
          <ListView></ListView>
        </StackPanel>
      </TabItem>
    </TabControl>
    <projLib:MainStatusBar Grid.Row="3" Grid.ColumnSpan="3"
                           Grid.Column="0" />
    <!-- <GridViewColumn CellTemplate="{StaticResource VsCell}" Header="VS Instance" /> -->
  </Grid>
</Window>