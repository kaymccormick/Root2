<Window
	x:Class="ProjInterface.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProjInterface"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:projLib="clr-namespace:ProjLib;assembly=ProjLib"
	Name="mainWindow"
	Title="MainWindow"
	Width="800"
	Height="450"
	DataContext="{Binding ElementName=mainWindow, Path=ViewModel}"
	mc:Ignorable="d">
	<Window.Resources>
		<CollectionViewSource x:Key="VsSource" Source="{Binding ElementName=mainWindow, Path=ViewModel.VsCollection}" />
		<DataTemplate x:Key="VsCell" DataType="projLib:IVsInstance">
			<TextBlock Text="{Binding DisplayName}" />
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<ListView Grid.Row="1" ItemsSource="{Binding Source={StaticResource VsSource}}">
			<ListView.View>
				<GridView>
					<GridViewColumn CellTemplate="{StaticResource VsCell}" Header="VS Instance" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>
