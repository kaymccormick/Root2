<UserControl x:Class="ProjLib.SpanToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:codeAnalysisApp1="clr-namespace:CodeAnalysisApp1;assembly=CodeAnalysisApp1"
             xmlns:projLib="clr-namespace:ProjLib"
             mc:Ignorable="d"
             FontSize="24"
             DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorLevel=1,AncestorType=projLib:SpanTT},Path=ViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
  </UserControl.Resources>
  <DockPanel LastChildFill="True">
    <StatusBar DockPanel.Dock="Bottom"><StatusBarItem Content="{Binding Path=Location}"></StatusBarItem></StatusBar>
    <ItemsControl ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorLevel=1,AncestorType=projLib:SpanTT}, Path=Spans}"></ItemsControl>
  </DockPanel>
</UserControl>
  